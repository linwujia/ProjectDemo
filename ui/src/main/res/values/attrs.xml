<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseLoadMoreRecyclerView">
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="auto_load_more" format="boolean" />
        <attr name="auto_load_more_threshold" format="integer" />
    </declare-styleable>

    <declare-styleable name="CaterpillarTabIndicator">
        <attr name="caterpillar_drawable" format="reference" />
        <attr name="caterpillar_height" format="dimension" />
        <attr name="caterpillar_margin_bottom" format="dimension" />
    </declare-styleable>
</resources>